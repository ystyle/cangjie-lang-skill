 * - TEST_CASE_NAME: 测试用例名
 * - FUNCTION_NAME: 被测试的函数名
 */

// 被测试的函数
func {{FUNCTION_NAME}}(param: Type): ReturnType {
    // 函数实现
}

// 测试类
@Test
class {{TEST_CLASS_NAME}} {
    @TestCase
    func test{{TEST_CASE_NAME}}() {
        // 准备测试数据
        let input = ...
        let expected = ...

        // 方式一：手动判断
        if ({{FUNCTION_NAME}}(input) != expected) {
            @Fail("{{FUNCTION_NAME}} failed")
        }

        // 方式二：Assert 条件
        @Assert({{FUNCTION_NAME}}(input) == expected)

        // 方式三：Assert 相等
        @Assert({{FUNCTION_NAME}}(input), expected)
    }

    @TestCase
    func testEdgeCase() {
        // 测试边界情况
        let result = {{FUNCTION_NAME}}(0)
        @Assert(result, expectedResult)
    }

    @TestCase
    func testNegativeCase() {
        // 测试负数情况
        let result = {{FUNCTION_NAME}}(-1)
        @Assert(result, expectedResult)
    }
}

